#!/bin/ksh

iecho()
#---------------------------------------------------------------
# Description: display message with timestamp
#---------------------------------------------------------------
{
  echo "$(date +'[%Y-%m-%d %T]')|INF:| $@"
}

#---------------------------------------------------------------
idebug()
#---------------------------------------------------------------
# Description: display message with timestamp to stderr
#---------------------------------------------------------------
{
  typeset message=$1

  if [[ ${debug} == "Y" ]]
  then
    echo "$(date +'[%Y-%m-%d %T]')|DBG:| $@" >&2
  fi
}

ierror()
#---------------------------------------------------------------
# Description: display message with timestamp
#---------------------------------------------------------------
{
  echo "$(date +'[%Y-%m-%d %T]')|ERR:| $@"
}
